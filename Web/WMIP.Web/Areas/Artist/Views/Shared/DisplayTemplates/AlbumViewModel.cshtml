@model WMIP.Web.Areas.Artist.Models.Albums.AlbumViewModel

<hr class="hr-1 bg-info w50" />
<input asp-for="Id" type="hidden" value="@Model.Id" />
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input disabled="disabled" asp-for="Name" class="form-control" placeholder="Name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Genre"></label>
            <input disabled="disabled" asp-for="Genre" class="form-control" placeholder="Genre..." />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ReleaseStage"></label>
            @Html.DropDownListFor(m => m.ReleaseStage, Html.GetEnumSelectList<WMIP.Data.Models.Enums.ReleaseStage>(), new { @class = "form-control", id = "ReleaseStage", disables="disabled" })
            <span asp-validation-for="ReleaseStage" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input disabled="disabled" asp-for="ReleaseDate" type="date" class="form-control" placeholder="Release Date..." />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="SpotifyLink"></label>
            <input disabled="disabled" asp-for="SpotifyLink" class="form-control" placeholder="Spotify Link..." />
            <span asp-validation-for="SpotifyLink" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="AlbumCoverLink"></label>
            <input disabled="disabled" asp-for="AlbumCoverLink" class="form-control" placeholder="Album Cover Link.." />
            <span asp-validation-for="AlbumCoverLink" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <label asp-for="SelectedSongIds"></label>
        @Html.ListBoxFor(model => model.SelectedSongIds, Model.AvailableSongs, new { @class = "form-control", multiple = "multiple", disabled="disabled" })
        <span asp-validation-for="SelectedSongIds" class="text-danger"></span>
    </div>
</div>
<hr class="hr-1 bg-info" />
<div class="button-holder text-center">
    <button type="submit" class="btn bg-info">Delete</button>
</div>

