@model WMIP.Web.Areas.Artist.Models.Songs.SongViewModel

<hr class="hr-1 bg-info w50" />
<input asp-for="Id" type="hidden" value="@Model.Id" />
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input disabled="disabled" asp-for="Name" class="form-control" placeholder="Name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Genre"></label>
            <input disabled="disabled" asp-for="Genre" class="form-control" placeholder="Genre..." />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ReleaseStage"></label>
            @Html.DropDownListFor(m => m.ReleaseStage, Html.GetEnumSelectList<WMIP.Data.Models.Enums.ReleaseStage>(), new { @class = "form-control", id = "ReleaseStage", disabled="disabled" })
            <span asp-validation-for="ReleaseStage" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input disabled="disabled" asp-for="ReleaseDate" type="date" class="form-control" placeholder="Release Date..." />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="TrackNumber"></label>
            <input disabled="disabled" asp-for="TrackNumber" class="form-control" placeholder="Track Number..." />
            <span asp-validation-for="TrackNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="MusicVideoLink"></label>
            <input disabled="disabled" asp-for="MusicVideoLink" class="form-control" placeholder="Music Video Link.." />
            <span asp-validation-for="MusicVideoLink" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <label asp-for="Lyrics"></label>
        <textarea disabled="disabled" id="lyricsEditor" asp-for="Lyrics" class="form-control" placeholder="Lyrics..."></textarea>
        <span asp-validation-for="Lyrics" class="text-danger"></span>
    </div>
</div>
<hr class="hr-1 bg-info" />
<div class="button-holder text-center">
    <button type="submit" class="btn bg-info">Delete</button>
</div>

