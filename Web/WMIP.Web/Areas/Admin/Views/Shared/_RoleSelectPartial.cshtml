@model WMIP.Web.Areas.Admin.Models.Users.RoleSelectionViewModel


<div class="text-center">
    <select data-id="@Model.UserId" class="form-control roleSelect">
        <option disabled selected value="">--Select a role--</option>
        @foreach (var role in Model.Roles)
        {
            @if (role == Model.SelectedRole)
            {
                <option selected value="@role">@role</option>
            }
            else
            {
                <option value="@role">@role</option>
            }

        }
    </select>

    <a data-id="@Model.UserId" class="btn btn-primary changeRoleBtn">Change role</a>
</div>
