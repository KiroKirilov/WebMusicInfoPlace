@model WMIP.Web.Areas.Admin.Models.Users.RoleSelectionViewModel


<div class="text-center">
    <form class="mx-auto w50" asp-controller="Users" asp-action="ChangeRole" asp-area="Admin" data-ajax-complete="changeRoleCallback" data-ajax-failure="changeRoleFail" data-ajax="true" data-ajax-method="POST">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <select name="NewRole" data-id="@Model.UserId" class="form-control roleSelect">
            <option disabled selected value="">--Select a role--</option>
            @foreach (var role in Model.Roles)
            {
                @if (role == Model.SelectedRole)
                {
                    <option selected value="@role">@role</option>
                }
                else
                {
                    <option value="@role">@role</option>
                }

            }
        </select>

        <button type="submit" class="btn btn-primary changeRoleBtn">Change role</button>
    </form>
</div>
