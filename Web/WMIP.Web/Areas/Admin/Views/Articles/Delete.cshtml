@model WMIP.Web.Areas.Admin.Models.Articles.ArticleViewModel

@{
    ViewData["Title"] = "Delete an article";
}

<h1 class="text-center">Delete an article</h1>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form class="mx-auto w50" method="post" asp-action="Delete">
                @Html.DisplayForModel()
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src='~/lib/tinymce/tinymce.min.js'></script>
    <script>
        tinymce.init({
            selector: '#bodyEditor',
            readonly: 1
        });
    </script>
}
